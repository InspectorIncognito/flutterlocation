<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/stop_details"
        android:layout_marginHorizontal="8dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/stop_image_"
            android:layout_width="22dp"
            android:layout_height="33dp"
            android:src="@drawable/iconos_paradero_mapa" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.Compat.Notification.Info"
                android:id="@+id/stop_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="PE433" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bus_details"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginEnd="4dp"
            android:id="@+id/service_image"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_bus_transantiago"
            android:tint="@color/grises_generales_mid_gray_2" />

        <TextView
            style="@style/TextAppearance.Compat.Notification.Info"
            android:maxLines="1"
            android:id="@+id/data_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            tools:text="7.32 Kms away" />

        <TextView
            style="@style/TextAppearance.Compat.Notification.Info"
            android:layout_marginHorizontal="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            tools:text="-" />

        <TextView
            style="@style/TextAppearance.Compat.Notification.Info"
            android:id="@+id/data_bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="506 - PE2457" />

    </LinearLayout>

</LinearLayout>